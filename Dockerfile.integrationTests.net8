# Build Stage
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

COPY ./PostgreSignalR ./PostgreSignalR
COPY ./PostgreSignalR.IntegrationTests.Abstractions ./PostgreSignalR.IntegrationTests.Abstractions
COPY ./PostgreSignalR.IntegrationTests.App ./PostgreSignalR.IntegrationTests.App

WORKDIR /src/PostgreSignalR.IntegrationTests.App
RUN dotnet publish -c Release -o /app/publish --framework net8.0 --no-cache

# Runtime Stage
FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS final
WORKDIR /app
COPY --from=build /app/publish ./

EXPOSE 8080
ENTRYPOINT ["dotnet", "PostgreSignalR.IntegrationTests.App.dll"]
